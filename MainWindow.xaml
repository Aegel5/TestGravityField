<Window x:Class="TestGravityField.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestGravityField"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
	<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100">
			</ColumnDefinition>
			<ColumnDefinition Width="*">
			</ColumnDefinition>
		</Grid.ColumnDefinitions>
		<StackPanel Orientation="Vertical" Margin="3">
			<TextBlock Name="v1">ffff</TextBlock>
			<TextBlock Name="v2">ddd</TextBlock>
		</StackPanel>
		<Border Margin="3"  Grid.Column="1" BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="3" >
		<Canvas Name="canvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1">
		</Canvas>
		</Border>
	</Grid>
</Window>
